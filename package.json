{
  "name": "image-stitch",
  "version": "1.1.33",
  "description": "Stitch images together efficiently with multi-format support (PNG, JPEG, HEIC), streaming, for node.js and web",
  "repository": {
    "type": "git",
    "url": "https://github.com/jburnhams/image-stitch.git"
  },
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "browser": {
        "default": "./dist/bundles/image-stitch.esm.js"
      },
      "deno": "./deno/mod.ts",
      "default": "./dist/esm/index.js"
    },
    "./bundle": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/bundles/image-stitch.esm.js"
    },
    "./browser": {
      "default": "./dist/browser/image-stitch.min.js"
    },
    "./decoders/png": {
      "types": "./dist/types/decoders/png.d.ts",
      "default": "./dist/esm/decoders/png.js"
    },
    "./decoders/jpeg": {
      "types": "./dist/types/decoders/jpeg.d.ts",
      "default": "./dist/esm/decoders/jpeg.js"
    },
    "./decoders/heic": {
      "types": "./dist/types/decoders/heic.d.ts",
      "default": "./dist/esm/decoders/heic.js"
    },
    "./deno": "./deno/mod.ts",
    "./package.json": "./package.json"
  },
  "browser": "dist/browser/image-stitch.min.js",
  "unpkg": "dist/browser/image-stitch.min.js",
  "jsdelivr": "dist/browser/image-stitch.min.js",
  "files": [
    "dist/esm",
    "dist/cjs",
    "dist/bundles",
    "dist/browser",
    "dist/types",
    "deno",
    "README.md"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:bundles": "node scripts/build-bundles.mjs",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:bundles",
    "build:tests": "tsc -p tsconfig.tests.json",
    "build:browser-test": "tsc tests/browser.test.ts --outDir build/browser-tests --module ES2022 --target ES2022 --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "build:memory-test": "tsc tests/memory.test.ts --outDir build/memory-tests --module ES2022 --target ES2022 --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports --skipLibCheck",
    "build:docs": "npm run build && node scripts/build-browser-bundle.js",
    "test": "npm run build && npm run build:tests && node --expose-gc --test build/tests/*.test.js",
    "test:memory": "npm run build && npm run build:memory-test && node --expose-gc --test build/memory-tests/tests/memory.test.js",
    "test:browser": "npm run build:docs && npm run build:browser-test && node --expose-gc --test build/browser-tests/browser.test.js",
    "test:all": "npm run test && npm run test:memory && npm run test:browser",
    "smoke:esm": "node scripts/smoke-esm.mjs",
    "smoke:cjs": "node scripts/smoke-cjs.cjs",
    "smoke": "npm run smoke:esm && npm run smoke:cjs",
    "coverage": "npm run build && npm run build:tests && c8 --reporter=lcov --reporter=text node --expose-gc --test build/tests/*.test.js",
    "example": "npm run build && node examples/basic-usage.js",
    "example:stream": "npm run build && node examples/streaming-usage.js",
    "size": "npm run build && node scripts/check-bundle-size.mjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "png",
    "jpeg",
    "heic",
    "heif",
    "image",
    "concatenate",
    "merge",
    "streaming",
    "canvas-free",
    "multi-format",
    "image-processing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/pngjs": "^6.0.5",
    "c8": "^10.1.3",
    "happy-dom": "^20.0.8",
    "pngjs": "^7.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@types/pako": "^2.0.4",
    "jpeg-js": "^0.4.4",
    "pako": "^2.1.0"
  },
  "peerDependencies": {
    "heic-decode": "^2.0.0",
    "libheif-js": "^1.17.0",
    "sharp": "^0.33.0"
  },
  "peerDependenciesMeta": {
    "sharp": {
      "optional": true
    },
    "libheif-js": {
      "optional": true
    },
    "heic-decode": {
      "optional": true
    }
  }
}
